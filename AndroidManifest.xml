<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dicedistributions"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.dicedistributions.MainActivity"
            android:label="@string/dice_distributions_string">
            <!-- android:screenOrientation="portrait"> -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.dicedistributions.HistogramActivity"
            android:label="@string/histogram_string" 
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="com.example.dicedistributions.StatsActivity"
            android:label="@string/statistics_string"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
